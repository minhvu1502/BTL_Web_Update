    <div class="row">
        @{
            int i = 0;
            foreach (var item in Model)
            {
                i++;
                <div class="col-md-3 col-sm-6">
                    <div class="product-grid">
                        <div class="product-image">
                            <a href="#">
                                <img class="pic-1" src="@Url.Content("~/Images/Images/"+item.Anh)">
                                <img class="pic-2" src="@Url.Content("~/Images/Images/"+item.Anh)">
                            </a>
                            <ul class="social">
                                <li><a href="@Url.Action("ProductDetail", new {@MaSP = item.MaSP})" data-tip="Details"><i class="fa fa-search"></i></a></li>
                                @*<li><a href="" data-tip="Add to Wishlist"><i class="fa fa-shopping-bag"></i></a></li>
                                <li><a href="" data-tip="Add to Cart"><i class="fa fa-shopping-cart"></i></a></li>*@
                            </ul>
                            <span class="product-new-label">Sale</span>
                            <span class="product-discount-label">20%</span>
                        </div>
                        <ul class="rating">
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star"></li>
                            <li class="fa fa-star disable"></li>
                        </ul>
