                            <h3 class="title"><a href="#">@item.TenSP</a></h3>
                            <div class="price">
                                $16.00
                                <span>$20.00</span>
                            </div>
                            @{
                                if (Session[SessionConstant.SESSION_USER] == null)
                                {
                                                        <a class="add-to-cart" href="@Url.Action("CheckLogin")">+ Add To Cart</a>
                                }
                                else
                                {
                        <a class="add-to-cart" href="@Url.Action("Index", "Cart", new {@MaSP = item.MaSP})">+ Add To Cart</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    @Html.PagedListPager(Model, page => Url.Action("ChuDeSanPham", new { page = page }))
    <div class="row">
        <div class="col" align="center">
            Trang @(Model.PageCount<Model.PageNumber?0: Model.PageNumber)/@Model.PageCount
        </div>
    </div>
