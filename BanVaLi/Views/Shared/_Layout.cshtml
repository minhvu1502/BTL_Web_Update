                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                    @*<li>
                            <a href="~/Admin">Admin</a>
                        </li>*@
                </ul>
            </nav>

            <!-- Page Content Holder -->
            <div id="content">
                <div class="container">

                    <button type="button" id="sidebarCollapse" class="navbar-btn">
                        <span></span>
