@using BanVaLi.Models
@using PagedList.Mvc
@{
    const int ACTIVATE = 1;
    const int DEACTIVATE = 0;
    ViewBag.Title = "ChuDeSanPham";
}
@model List<tDanhMucSP>
<style>
    #HinhAnh {
        height: 100px
    }

    #SanPham {
        float: left;
        width: 100px;
    }

    .pagination li {
        float: left
    }
</style>
<script>
    $(document).ready(function() {

    });

    function Edit(maSp) {
        var url = '@Url.Action("PartialViewModal")/?MaSP=' + maSp;
        $.get(url,
            function(data) {
                $('.container').html(data);
                $('#myModal').modal({ backdrop: 'static', keyboard: false });
            });
        @*var x = {
            "MaSP": maSp
        }
        $.ajax({
            type: 'GET',
            url: '@Url.Action("PartialViewModal")',
            data: x,
            dataType: 'json',
            success: function(data) {
                $('.container').html(data);
                $('#myModal').modal('show');
            },
            error: function() {

            }
        });*@

    }
    function Delete(maSp) {
        var x = {
            "MaSP": maSp
        }
        $.confirm({
            text: "Are you sure you want to delete that comment?",
            title: "Confirmation required",
            buttons: {
                confirm: {
                    text: "Xác Nhận",
                    action: function() {
                        $.ajax({
                            type: "GET",
                            url: '@Url.Action("ConfirmDelete")',
                            data: x,
                            dataType: "json",
                            success: function(result) {
                                alert(result.ErrorMessage);
                                location.reload();
                            },
                            error: function() {

                            }
                        });
                    }
                },
                cancel: {
                    text: "Hủy Bỏ",
                    action: function() {

                    }
                }
            }
        });
    }
</script>
<h2>@ViewBag.Name</h2>
<div class="container">
    <button type="button" class="btn btn-success text"><a class="" style="color: black" href="@Url.Action("CreateProduct")"><i class="fa fa-plus"></i></a></button>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>DataTable Example</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên SP</th>
                            <th>Giá</th>
                            <th>Loại</th>
                            <th>Trạng Thái</th>
                            <th>
                                Action <br />

                            </th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên SP</th>
                            <th>Giá</th>
                            <th>Loại</th>
                            <th>Trạng Thái</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MaSP</td>
                                    <td>@item.TenSP</td>
                                    <td>@item.Gia</td>
                                    <td>@item.MaLoai</td>
                                    @if (item.Status == true)
                                    {
                                        <td class="text-center"><a href="javascript:void(0)" class="badge badge-success">Active</a></td>
                                    }
                                    else
                                    {
                                        <td class="text-center"><a href="javascript:void(0)" class="badge badge-danger">Deactive</a></td>
                                    }
                                    <td>
                                        <button id="edit" onclick="Edit('@item.MaSP.Trim()')" class="btn btn-warning"><i class="fa fa-edit"></i></button>
                                        <button class="btn btn-danger delete" onclick="Delete('@item.MaSP.Trim()')"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



